<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Day -->
    <style name="Theme.Scheduler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ac3232</item>
        <item name="colorPrimaryVariant">#9C0F0F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#DC0E0E</item>
        <item name="colorSecondaryVariant">#9C0F0F</item>
        <item name="colorOnSecondary">#520808</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Scheduler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Scheduler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Scheduler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
